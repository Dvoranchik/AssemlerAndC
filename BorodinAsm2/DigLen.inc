
;
; Макрос проверяет длину числа, содержащегося в EAX
;
; Вход:
;		EAX – число, для которого подсчитывается длина
; Выход:
;		BX – длина числа содержащегося в EAX
;
DigitLen MACRO
	mov 	esi, 10 ; счетчик чисел
	l = 1000000000 ; маска с которой будем сравнивать
	REPT 9  ;цикл 9 раз повторяющий операцию
		cmp eax, l  ; сравниваем число с маской
		sbb esi, 0 ; вычитаем из счетчика 1 или 0 в зависимости от значения сравнения
		l = l / 10 ;уменьшаем маску на 10
	ENDM
ENDM DigitLen