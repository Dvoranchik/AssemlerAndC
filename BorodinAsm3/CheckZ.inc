;
; ѕроцедура проверки проверки исключительной ситуации с нулем, в начале разр€да
;
; ¬ход:
;		EBX = -1 / 1 (в зависимости от знака числа)
;		AL - символ в строке, старший разр€д
; ¬ыход:
;		EBX = 3 - разр€д равен 0
;		EBX = 2 - '-0' в строке
;		EBX = -1 / 1, иначе
;
CheckZero proc
			cmp		ebx, -1		;отрицательное ли число
			je		@@Negative	
			
			cmp		al, '0'			;если нет провер€ем на 0
			je		@@SingleZero	;если да помещаем 3
			ret
			
@@SingleZero:
			mov		ebx, 3			;помещаем 3
			ret
			
@@Negative:						; если отрицательное
			cmp		al, '0'			; провер€ем на ноль следующий
			je		@@NegativeZero	; если ноль то добавл€ем 2 
			ret
			
@@NegativeZero:				
			mov		ebx, 2
			ret
			
CheckZero endp
